<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Notes</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <%- include("__bootstrap.ejs")%>

        <style>
            body {
                font-family: sans-serif;
                margin: 0;
                padding: 0;
                background: #f9f9f9;
            }

            .main-container {
                max-width: 1100px;
                margin: 30px auto;
                padding: 0 15px;
            }

            .notes-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 25px;
            }

            .notes-header h2 {
                color: #007bff;
                font-size: 24px;
            }

            .note-count {
                background-color: #17a2b8;
                color: white;
                padding: 5px 10px;
                font-size: 14px;
                border-radius: 5px;
            }

            .notes-grid {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
            }

            .note-card {
                /* background: white; */
                border-radius: 5px;
                padding: 15px;
                width: 100%;
                max-width: 320px;
                /* box-shadow: 10 12px 8px rgba(135, 35, 35, 0.1); */
                box-shadow: 2px 2px 2px 2px grey;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .note-title {
                font-size: 18px;
                margin-bottom: 10px;
                color: #343a40;
                /* white-space: nowrap; */
                /* overflow: hidden; */
                /* text-overflow: ellipsis; */
            }

            .note-detail {
                font-size: 13px;
                color: #6c757d;
                margin: 5px 0;
            }

            .note-footer {
                margin-top: 15px;
            }

            .view-btn {
                display: block;
                text-align: center;
                padding: 8px;
                background: #007bff;
                color: white;
                border-radius: 4px;
                text-decoration: none;
            }

            .no-notes {
                text-align: center;
                padding: 60px 20px;
                color: #6c757d;
            }

            .no-notes .icon-empty {
                font-size: 60px;
                margin-bottom: 20px;
                display: inline-block;
                color: #ccc;
            }

            .upload-btn {
                padding: 10px 15px;
                background: #007bff;
                color: white;
                border-radius: 4px;
                text-decoration: none;
            }

            .icon-note::before {
                content: "üìù";
                margin-right: 5px;
            }

            .icon-file::before {
                content: "üìÑ";
                margin-right: 5px;
            }

            .icon-filename::before {
                content: "üìÅ";
                margin-right: 5px;
            }

            .icon-date::before {
                content: "üìÖ";
                margin-right: 5px;
            }

            .icon-view::before {
                content: "üëÅÔ∏è";
                margin-right: 5px;
            }

            .icon-upload::before {
                content: "‚¨ÜÔ∏è";
                margin-right: 5px;
            }

            .icon-empty::before {
                content: "üì≠";
            }
        </style>
</head>

<body>
    <%-include("__header.ejs")%>

        <div class="main-container">
            <div class="notes-header">
                <h2><i class="icon-note"></i> My Notes</h2>
                <span class="note-count">
                    <%= (notes && notes.length) || 0 %> Total Notes
                </span>
            </div>

            <% if (notes && notes.length> 0) { %>
                <div class="notes-grid">
                    <% for (const note of notes) { %>
                        <div class="note-card">
                            <div class="note-body">
                                <h5 class="note-title" title="<%= note.title %>">
                                    <i class="icon-file"></i>
                                    <%= note.title %>
                                </h5>

                                <p class="note-detail">
                                    <small><i class="icon-filename"></i> File: <%= note.file_name %></small>
                                </p>

                                <p class="note-detail">
                                    <small><i class="icon-date"></i> Uploaded: <%= new
                                            Date(note.upload_date).toLocaleDateString('en-IN') %></small>
                                </p>
                            </div>
                            <div class="note-footer">
                                <a href="/notes/view/<%= note.id %>" class="view-btn" style="text-decoration: none;">
                                    <i class="icon-view"></i> View Note
                                </a>

                                <a href="/notes/delete/<%= note.id %>" class="view-btn"
                                    style="background-color:white;color: red;border: 2px solid red;margin-top: 5px; text-decoration: none;">Delete
                                    Note</a>
                            </div>
                        </div>
                        <% } %>
                </div>

                <% } else { %>
                    <div class="no-notes">
                        <i class="icon-empty"></i>
                        <h4>No Notes Found</h4>
                        <p>You haven't uploaded any notes yet.</p>
                        <a href="/notes/upload" class="upload-btn" style="text-decoration: none;">
                            <i class="icon-upload"></i> Upload Your First Note
                        </a>
                    </div>
                    <% } %>
        </div>



</body>

</html>